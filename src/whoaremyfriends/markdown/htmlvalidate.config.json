{
  "extends": ["html-validate:recommended"],
  "rules": {
    "attr-quotes": "off",
    "element-name": "off",
    "unrecognized-char-ref": "off",
    "no-inline-style": "off",
    "wcag/h37": "off",
    "void-style": "off",
    "prefer-tbody": "off",
    "doctype-style": "off",
    "svg-focusable": "off",
    "wcag/h67": "off",
    "element-permitted-content": "error",
    "text-content": "off",
    "prefer-native-element": "off",

"attr-spacing": "off",
"attr-case": "off",
"close-attr": "off",
"no-dup-attr": "off"

  }
}
